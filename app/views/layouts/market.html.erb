<!DOCTYPE html>
<html>
  <head>
    <!-- this enables responsive features in browser -->
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <title><%= content_for?(:title) ? yield(:title) : "RainMarketing" %></title>
    <!-- your & Flatty stylesheets -->
    <%= stylesheet_link_tag "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <!-- if you are going to support IE8 you must include these files -->
    <!--[if lt IE 9]>
      <script src='assets/flatty/ie/html5shiv.js' type='text/javascript'></script>
      <script src='assets/flatty/ie/respond.min.js' type='text/javascript'></script>
    <![endif]-->
  </head>
  <body class='contrast-red'>
    <%= render 'layouts/market/market_header' %>
    <div id="wrapper">
      <div id="main-nav-bg"></div>
      <nav id="main-nav"><%= render 'layouts/market/market_nav' %></nav>
      <section id="content">
        <div class='container'>
          <div class='row' id='content-wrapper'>
            <div class='col-xs-12'>
              <%= yield %>
              <%#= render 'layouts/market/market_footer' %>
            </div>
          </div>
        </div>
      </section>
    </div>
  </body>
</html>